{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "ES6",
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true, // debug
    "lib": ["es6"],
    "strictPropertyInitialization": false,
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["../node_modules"],
  "include": ["**/*.ts"]
}
